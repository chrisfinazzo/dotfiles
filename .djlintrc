{
  "extensions": [
    "njk",
    "nunjucks"
  ],
  "format": {
    "preserve_line_breaks": true,
    "indent": "  ",
    "space_before_conditional": true,
    "line_length": 80,
    "max_preserve_newlines": 2
  },
  "lint": {
    "require_start_newline": true,
    "require_start_newline_types": [
    "block"
  ],
    "no_inline_styles": true,
    "self_closing": false,
    "require_attribute_quotes": true,
    "no_trailing_whitespace": true,
    "no_self_closing_html": false
  },
  "ignore": {
    "templates": [],
    "rules": []
  }
}
